<Project>
  <PropertyGroup>
    <Configuration>Release</Configuration>
    <Platform>AnyCPU</Platform>
    <PublishProtocol>ClickOnce</PublishProtocol>
    <TargetFramework>net9.0-windows</TargetFramework>
    <SelfContained>false</SelfContained>
    <Install>true</Install>
    <InstallFrom>Disk</InstallFrom>
    <UpdateEnabled>true</UpdateEnabled>
    <UpdateMode>Foreground</UpdateMode>
    <IsWebBootstrapper>false</IsWebBootstrapper>
    <UseApplicationTrust>false</UseApplicationTrust>
    <GenerateManifests>true</GenerateManifests>
    <GenerateManifests Condition="'$(MSBuildRuntimeType)' == 'Core'">false</GenerateManifests>
    <PublishReadyToRun>false</PublishReadyToRun>
    <PublishSingleFile>false</PublishSingleFile>
    <PublishTrimmed>false</PublishTrimmed>
    <CreateDesktopShortcut>true</CreateDesktopShortcut>
    <CreateStartMenuShortcut>true</CreateStartMenuShortcut>
    <GenerateClickOnceManifests>true</GenerateClickOnceManifests>
    <GenerateClickOnceManifests Condition="'$(MSBuildRuntimeType)' == 'Core'">false</GenerateClickOnceManifests>
    <ApplicationVersion>1.0.0.0</ApplicationVersion>
    <ApplicationRevision>0</ApplicationRevision>
    <AutoIncrementApplicationRevision>true</AutoIncrementApplicationRevision>
    <BootstrapperEnabled>true</BootstrapperEnabled>
    <!-- Avoid MSB4803 when Rider uses dotnet msbuild; the full MSBuild path is still used by Publish-Installer.ps1 -->
    <BootstrapperEnabled Condition="'$(MSBuildRuntimeType)' == 'Core'">false</BootstrapperEnabled>
    <GenerateBootstrapper Condition="'$(MSBuildRuntimeType)' == 'Core'">false</GenerateBootstrapper>
  </PropertyGroup>
</Project>
