<Window x:Class="lifeviz.LayerEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Layer Editor"
        Width="980"
        Height="820"
        MinWidth="720"
        MinHeight="520"
        Background="#0B0B0B"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style TargetType="Expander">
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#262626" />
            <Setter Property="BorderBrush" Value="#3A3A3A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#F2F2F2" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A" />
            <Setter Property="BorderBrush" Value="#3A3A3A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#F2F2F2" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#F2F2F2" />
            <Setter Property="BorderBrush" Value="#BFBFBF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>
        <DataTemplate x:Key="AnimationTemplate">
            <Border BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Padding="8"
                    Margin="0,6,0,0"
                    Background="#141414">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="{Binding DisplayName}"
                                   FontWeight="Bold"
                                   DockPanel.Dock="Left" />
                        <Button Content="Remove"
                                DockPanel.Dock="Right"
                                Padding="8,2"
                                Margin="8,0,0,0"
                                Click="RemoveAnimation_Click" />
                    </DockPanel>

                    <WrapPanel Margin="0,6,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,12,6">
                            <TextBlock Text="Loop"
                                       VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{Binding LoopOptions}"
                                      DisplayMemberPath="Label"
                                      SelectedValuePath="Value"
                                      SelectedValue="{Binding Loop}"
                                      Margin="6,0,0,0"
                                      Width="140"
                                      SelectionChanged="AnimationLoop_Changed" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,12,6">
                            <TextBlock Text="Speed"
                                       VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{Binding SpeedOptions}"
                                      DisplayMemberPath="Label"
                                      SelectedValuePath="Value"
                                      SelectedValue="{Binding Speed}"
                                      Margin="6,0,0,0"
                                      Width="120"
                                      SelectionChanged="AnimationSpeed_Changed" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,12,6">
                            <TextBlock Text="Cycle"
                                       VerticalAlignment="Center" />
                            <Slider Minimum="1"
                                    Maximum="{Binding CycleMax}"
                                    Value="{Binding BeatsPerCycle}"
                                    Width="160"
                                    SmallChange="1"
                                    LargeChange="{Binding CycleLargeChange}"
                                    Margin="6,0,0,0"
                                    ValueChanged="AnimationCycle_Changed" />
                            <TextBlock Text="{Binding BeatsPerCycle, StringFormat={}{0:0} beats}"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0,2,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,12,6"
                                    Visibility="{Binding IsTranslate, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Direction"
                                       VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{Binding TranslateDirectionOptions}"
                                      DisplayMemberPath="Label"
                                      SelectedValuePath="Value"
                                      SelectedValue="{Binding TranslateDirection}"
                                      Margin="6,0,0,0"
                                      Width="140"
                                      SelectionChanged="AnimationTranslateDirection_Changed" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,12,6"
                                    Visibility="{Binding IsRotate, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Direction"
                                       VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{Binding RotationDirectionOptions}"
                                      DisplayMemberPath="Label"
                                      SelectedValuePath="Value"
                                      SelectedValue="{Binding RotationDirection}"
                                      Margin="6,0,0,0"
                                      Width="160"
                                      SelectionChanged="AnimationRotateDirection_Changed" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,12,6"
                                    Visibility="{Binding IsDvd, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Size"
                                       VerticalAlignment="Center" />
                            <Slider Minimum="0.05"
                                    Maximum="0.5"
                                    Value="{Binding DvdScale}"
                                    Width="160"
                                    SmallChange="0.01"
                                    LargeChange="0.05"
                                    Margin="6,0,0,0"
                                    ValueChanged="AnimationSize_Changed" />
                            <TextBlock Text="{Binding DvdScale, StringFormat={}{0:P0}}"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="LayerTemplate">
            <Border BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="8"
                    Margin="0,0,0,10"
                    Background="#111111">
                <Expander Header="{Binding DisplayLabel}"
                          IsExpanded="True">
                    <StackPanel Margin="0,6,0,0">
                        <DockPanel>
                            <StackPanel Orientation="Horizontal"
                                        DockPanel.Dock="Left">
                                <Button Content="Primary"
                                        Padding="8,2"
                                        Margin="0,0,8,0"
                                        Click="MakePrimary_Click" />
                                <Button Content="Up"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Click="MoveUp_Click" />
                                <Button Content="Down"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Click="MoveDown_Click" />
                                <Button Content="Remove"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Click="RemoveSource_Click" />
                                <Button Content="Restart"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Visibility="{Binding IsVideo, Converter={StaticResource BoolToVisibility}}"
                                        Click="RestartVideo_Click" />
                            </StackPanel>
                        </DockPanel>

                        <WrapPanel Margin="0,6,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,6">
                                <TextBlock Text="Blend"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding BlendModeOptions}"
                                          DisplayMemberPath="Label"
                                          SelectedValuePath="Value"
                                          SelectedValue="{Binding BlendMode}"
                                          Margin="6,0,0,0"
                                          Width="160"
                                          SelectionChanged="BlendMode_Changed" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,6">
                                <TextBlock Text="Fit"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding FitModeOptions}"
                                          DisplayMemberPath="Label"
                                          SelectedValuePath="Value"
                                          SelectedValue="{Binding FitMode}"
                                          Margin="6,0,0,0"
                                          Width="140"
                                          SelectionChanged="FitMode_Changed" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,6">
                                <TextBlock Text="Opacity"
                                           VerticalAlignment="Center" />
                                <Slider Minimum="0"
                                        Maximum="1"
                                        Value="{Binding Opacity}"
                                        Width="150"
                                        SmallChange="0.05"
                                        LargeChange="0.1"
                                        Margin="6,0,0,0"
                                        ValueChanged="Opacity_Changed" />
                                <TextBlock Text="{Binding Opacity, StringFormat={}{0:P0}}"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <CheckBox Content="Mirror Webcam"
                                      Margin="0,0,12,6"
                                      IsEnabled="{Binding IsWebcam}"
                                      IsChecked="{Binding Mirror}"
                                      Checked="Mirror_Changed"
                                      Unchecked="Mirror_Changed" />
                        </WrapPanel>

                        <StackPanel Margin="0,2,0,0"
                                    Visibility="{Binding IsGroup, Converter={StaticResource BoolToVisibility}}">
                            <WrapPanel>
                                <TextBlock Text="Group Name"
                                           VerticalAlignment="Center" />
                                <TextBox Text="{Binding DisplayName}"
                                         Width="240"
                                         Margin="8,0,0,6"
                                         TextChanged="GroupName_Changed" />
                            </WrapPanel>
                        </StackPanel>

                        <TextBlock Text="{Binding Details}"
                                   Margin="0,2,0,0"
                                   Foreground="#B5B5B5" />

                        <GroupBox Header="Animations"
                                  Margin="0,10,0,0">
                            <StackPanel Margin="6">
                                <ItemsControl ItemsSource="{Binding Animations}"
                                              ItemTemplate="{StaticResource AnimationTemplate}" />

                                <WrapPanel Margin="0,10,0,0">
                                    <TextBlock Text="Add"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0" />
                                    <Button Content="Zoom"
                                            Padding="8,2"
                                            Margin="0,0,6,0"
                                            Click="AddZoom_Click" />
                                    <ComboBox ItemsSource="{Binding TranslateDirectionOptions}"
                                              DisplayMemberPath="Label"
                                              SelectedValuePath="Value"
                                              SelectedValue="{Binding PendingTranslateDirection}"
                                              Width="110"
                                              Margin="0,0,6,0" />
                                    <Button Content="Translate"
                                            Padding="8,2"
                                            Margin="0,0,12,0"
                                            Click="AddTranslate_Click" />
                                    <ComboBox ItemsSource="{Binding RotationDirectionOptions}"
                                              DisplayMemberPath="Label"
                                              SelectedValuePath="Value"
                                              SelectedValue="{Binding PendingRotationDirection}"
                                              Width="140"
                                              Margin="0,0,6,0" />
                                    <Button Content="Rotate"
                                            Padding="8,2"
                                            Margin="0,0,12,0"
                                            Click="AddRotate_Click" />
                                    <Button Content="DVD"
                                            Padding="8,2"
                                            Margin="0,0,6,0"
                                            Click="AddDvd_Click" />
                                    <Button Content="Fade"
                                            Padding="8,2"
                                            Click="AddFade_Click" />
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>

                        <StackPanel Margin="0,10,0,0"
                                    Visibility="{Binding IsGroup, Converter={StaticResource BoolToVisibility}}">
                            <WrapPanel>
                                <TextBlock Text="Add Child"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <Button Content="Group"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Click="AddChildGroup_Click" />
                                <Button Content="Window"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Click="AddChildWindow_Click" />
                                <Button Content="Webcam"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Click="AddChildWebcam_Click" />
                                <Button Content="File"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Click="AddChildFile_Click" />
                                <Button Content="Sequence"
                                        Padding="8,2"
                                        Click="AddChildSequence_Click" />
                            </WrapPanel>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding Children}"
                                      ItemTemplate="{DynamicResource LayerTemplate}"
                                      Margin="12,10,0,0"
                                      Visibility="{Binding IsGroup, Converter={StaticResource BoolToVisibility}}" />
                    </StackPanel>
                </Expander>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="12"
          TextElement.Foreground="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">
            <TextBlock Text="Layer Stack"
                       FontSize="18"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">
                <CheckBox x:Name="LiveModeCheckBox"
                          Content="Live Mode"
                          IsChecked="{Binding LiveMode}"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Checked="LiveModeToggle"
                          Unchecked="LiveModeToggle" />
                <Button x:Name="ApplyButton"
                        Content="Apply"
                        Padding="12,4"
                        Click="ApplyButton_Click" />
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <WrapPanel Margin="0,0,0,12">
                    <TextBlock Text="Add"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <Button Content="Group"
                            Padding="8,2"
                            Margin="0,0,6,0"
                            Click="AddRootGroup_Click" />
                    <Button Content="Window"
                            Padding="8,2"
                            Margin="0,0,6,0"
                            Click="AddRootWindow_Click" />
                    <Button Content="Webcam"
                            Padding="8,2"
                            Margin="0,0,6,0"
                            Click="AddRootWebcam_Click" />
                    <Button Content="File"
                            Padding="8,2"
                            Margin="0,0,6,0"
                            Click="AddRootFile_Click" />
                    <Button Content="Sequence"
                            Padding="8,2"
                            Click="AddRootSequence_Click" />
                </WrapPanel>

                <ItemsControl ItemsSource="{Binding Sources}"
                              ItemTemplate="{StaticResource LayerTemplate}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
